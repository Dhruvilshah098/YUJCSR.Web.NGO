<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YUJCSR.Web.NGO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YUJCSR.Web.NGO.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-md navbar-light bg-white header-navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                        src="./Assets/images/logo.svg" alt="logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Project">Project</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Impact">Impact</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CSO">CSO</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Companies">Companies</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact us</a>
                        </li>
                    </ul>

                    <div class="action-container">
                        <a class="btn btn-outline-primary" asp-area="" asp-controller="Home"
                            asp-action="Login">Login</a>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="border-top container links-section">
            <div class="row">
                <div class="col-12 col-lg-3">
                    <img src="./Assets/images/logo.svg" class="logo" alt="logo" />
                </div>
                <div class="col-12 col-lg-3">
                    <div class="links">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Home</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Projects</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">How we work</a>
                    </div>

                    <div class="details">
                        <p> <span>Registered Address:</span>
                            <br> B-29, Sainath Park Society,<br>
                            Opp. Kalyan Party Plot, Vasna,<br>
                            Vadodara - 390015</p>
                    </div>
                </div>
                <div class="col-12 col-lg-3">
                    <div class="links">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Our team</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Impact</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">CSO</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Companies</a>
                    </div>

                    <div class="details">
                        <p><span>Email: </span> yujcsr@gmail.com</p>
                        <p><span>Tel: </span> 91 7990515758</p>
                    </div>
                </div>
                <div class="col-12 col-lg-3">
                    <div class="connect-with-us">
                        <p>Connect with us</p>

                        <div class="social-wrapper">
                            <img src="./Assets/icons/linkedin.svg" alt="linkedin" />
                            <img src="./Assets/icons/fb.svg" alt="facebook" />
                            <img src="./Assets/icons/instagram.svg" alt="instagram" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="border-top container copyright-section">
            <div class="copyright-left">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Terms & Conditions</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Cookie policy</a>
            </div>
            <div class="copyright-right">
                Copyright &copy; 2023 YUJCSR
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
